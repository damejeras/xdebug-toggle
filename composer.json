{
    "name": "grasmash/xdebug-toggle",
    "description": "Simple CLI tools to toggle xdebug easily.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=5.6",
        "symfony/console": "^3.2",
        "symfony/filesystem": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Grasmash\\XDebugToggle\\": "src/"
        }
    },
    "bin": [
        "bin/xdebug-toggle"
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^6.1",
        "satooshi/php-coveralls": "^1.0"
    }
}
